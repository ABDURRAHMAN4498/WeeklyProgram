@model List<UserDto>
    
<div class="container-xxl flex-grow-1 container-p-y">
    
    <div class="">
        <div class="table-responsive text-center ">
            <a class="btn btn-success my-3 " asp-controller="User" asp-action="Add">
                اضافة مستخدم<i class="fa-solid fa-plus"></i>
            </a>
            <table class="table table-bordered table-hover" width="100%" callspacing="0" >
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>الكنية</th>
                        <th>البريد الالكتروني</th>
                        <th>رقم الموبايل</th>
                        <th>الصلاحية</th>
                        <th>تاكيد البريد الالكتروني</th>
                        <th>اخطاء الاتصال</th>
                        <th>العمليات</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>الاسم</th>
                        <th>الكنية</th>
                        <th>البريد الالكتروني</th>
                        <th>رقم الموبايل</th>
                        <th>الصلاحية</th>
                        <th>تاكيد البريد الالكتروني</th>
                        <th>اخطاء الاتصال</th>
                        <th>العمليات</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Role</td>
                            <td><span class="badge rounded-pill text-bg-primary @(item.EmailConfirmed?"text-bg-success":"text-bg-danger") ">@(item.EmailConfirmed ? "مؤكد" :
                            "غير مؤكد")</span></td>
                            
                            <td>@item.AccessFaildCount</td>
                            <td>
                                <a class="btn btn-warning btn-sm shadow" asp-controller="User" asp-action="Update"
                                    asp-route-UserId="@item.Id"><i class="fa-solid fa-pen-to-square fa-fade"></i></a>
                                <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="Delete"
                                    asp-route-UserId="@item.Id"><i class="fa-regular fa-square-minus fa-fade"></i></a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
