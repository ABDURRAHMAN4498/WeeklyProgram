@model UserUpdateDto

@{
    ViewData["Title"] = "صفحة تعديل الحساب";
}
<div class="container-xxl flex-grow-1 container-p-y ">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mb-4">
                <h5 class="card-header text-center">انشاء حساب</h5>
                <form asp-action="Update" asp-controller="User" method="post">
                    @* <div asp-validation-summary="All" class="text-danger"></div> *@
                    <input type="hidden" asp-for="Id">
                    <div class="card-body">
                        <div class="form-group my-2">
                            <label asp-for="FirstName" class="mb-2"></label>
                            <input type="text" asp-for="FirstName" placeholder="الاسم" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="LastName" class="mb-2"></label>
                            <input type="text" asp-for="LastName" placeholder="الكنية" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="Email" class="mb-2"></label>
                            <input type="text" asp-for="Email" placeholder="البريد الالكتروني" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="PhoneNumber" class="mb-2"></label>
                            <input type="text" asp-for="PhoneNumber" placeholder="رقم الهاتف" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="Roles" class="mb-2"></label>
                            <select type="text" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"
                                class="form-control">
                            </select>
                        </div>
                        <div class="text-center mt-3">
                            <input type="submit" asp-for="Password" value="حفظ التعديل" class=" btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}