@model UserAddDto

@{
    ViewData["Title"] = "صفحة انشاء حساب";
}
<div class="container-xxl flex-grow-1 container-p-y ">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mb-4">
                <h5 class="card-header text-center">انشاء حساب</h5>
                <form asp-action="Add" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group my-2">
                            <input type="text" asp-for="FirstName" placeholder="الاسم" class="form-control"/>
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group my-2">
                            <input type="text" asp-for="LastName" placeholder="الكنية" class="form-control"/>
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group my-2">
                            <input type="text" asp-for="Email" placeholder="البريد الالكتروني" class="form-control"/>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group my-2">
                            <input type="text" asp-for="PhoneNumber" placeholder="رقم الهاتف" class="form-control"/>
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group my-2">
                            <select type="text" asp-for="RoleId" placeholder="" asp-items="@(new SelectList(Model.Roles,"Id","Name"))" class="form-control"></select>
                            <span asp-validation-for="RoleId" ></span>
                        </div>
                        <div class="form-group my-2">
                            <input type="password" asp-for="Password" placeholder="كلمة السر" class="form-control"/>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="text-center my-2">
                            <input type="submit" asp-for="Password" value="انشاء الحساب" class=" btn btn-primary"/>
                            <span asp-validation-for="Password" ></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>