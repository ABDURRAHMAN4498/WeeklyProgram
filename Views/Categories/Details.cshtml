    ViewData["Title"] = "Details";
}


<div>
    <h4 class="text-center">تفاصيل الفئة</h4>
    <hr />  
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
